{% comment %}Included in PDF layout and report show{% endcomment %}

h3.campaign-report-intro-title {
  margin-bottom: 3px;
  font-size: 115%;
}
.campaign-report-intro-by {
  margin-bottom: 1.618em;
}
.campaign-report-main {
  padding-bottom: 1em;
}
.campaign-report-links a {
  padding-left: 0.4045em;
}
.campaign-report-list {
  margin-top: 1.618em;
  overflow: hidden;
}
.campaign-report-item {
  font-size: 95%;
  padding: 1em;
  border-top: 1px solid #f5f5f5;
  color: #333;
}
.campaign-report-item:first-child {
  border-top: none;
}
.campaign-report-item:nth-child(odd) {
  background-color: #fafafa;
}
.campaign-report-item:nth-child(even) {
  background-color: #fff;
}
.campaign-report-rewards {
  color: #444;
  font-size: 93%;
  margin-top: 2px;
  padding-left: 1em;
  border-left: 1px dotted #ccc;
}
.campaign-report-back-link {
  margin-bottom: 1.618em;
}
