body {
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
  text-align: left;
  line-height: 22px;
  font-size: 10pt;
}
h3 {
  font-size: 100%;
  font-weight: 700;
}
p {
  margin-top: 0;
}
ul {
  padding: 0;
  margin: 0;
}
ul li {
  list-style-type: none;
  list-style-position: outside;
}
.hint {
  color: #444;
  font-size: 95%;
}
.right {
  float: right;
}
