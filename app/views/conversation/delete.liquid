{% comment %}Delete conversation{% endcomment %}

{% layout %}{{ layout.dialog }}{% endlayout %}
{% title %}{{ 'message_delete_conversation' | t }}{% endtitle %}
<form accept-charset="utf-8" onsubmit="hq.postDialog(this);return false" action="{{ 'conversation_delete' | path: conversation.id }}" method="POST">
  {{ security.forgery_tag }}{{ security.honeypot_captcha }}
  <input type="hidden" name="_method" value="DELETE">
  <button class="btn btn-warning">
    {{ 'delete' | t }}
	</button>
  <a onclick="hq.closeDialog();return false" href="{{ 'conversation_inbox' | path }}">
    {{ 'cancel' | t }}
	</a>
</form>
